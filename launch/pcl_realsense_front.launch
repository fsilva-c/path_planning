<launch>
  <!-- args... -->
  <arg name="UAV_NAME" default="$(env UAV_NAME)" />
  <arg name="standalone" default="false" />
  <arg name="debug" default="false" />
  <arg name="nodelet_manager_name" default="$(arg UAV_NAME)_mapping_nodelet_manager" />
  <arg name="config_pcl_filter_rs_front" default="" />

  <!-- NodeletManager -->
  <include file="$(find fs_path_planning)/launch/nodelet_manager.launch">
    <arg name="standalone" value="$(arg standalone)" />
    <arg name="debug" value="$(arg debug)" />
    <arg name="nodelet_manager_name" value="$(arg nodelet_manager_name)" />
  </include>

  <!-- Realsense Depth to PC -->
  <include file="$(find fs_path_planning)/launch/depth_to_pc.launch">
    <arg name="standalone" value="$(arg standalone)" />
    <arg name="nodelet_manager_name" value="$(arg nodelet_manager_name)" />
    <arg name="name_suffix" value="_realsense_front" />

    <arg name="camera_info_topic_in" value="rgbd/aligned_depth_to_color/camera_info" />
    <arg name="image_rect_topic_in" value="rgbd/aligned_depth_to_color/image_raw" />
    <arg name="pc_topic_out" value="rgbd/points" />
  </include>

  <!-- Realsense Front filter -->
  <include file="$(find mrs_pcl_tools)/launch/pcl_filter.launch">
    <arg name="standalone" value="$(arg standalone)" />
    <arg name="nodelet_manager_name" value="$(arg nodelet_manager_name)" />
    <arg name="custom_config" value="$(arg config_pcl_filter_rs_front)" />
    <arg name="debug" value="false" />
    <arg name="name_suffix" value="rs_front" />
    <arg name="topic_3d_lidar_in" value="rgbd/points" />
  </include>
</launch>